<Window x:Class="WpfAppdashboard.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppdashboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1200">

    <Grid HorizontalAlignment="Center" >


        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>


        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
            <Image Source="C:\Users\hiruni lakshika\source\repos\WpfAppdashboard\WpfAppdashboard\Pic\TaskGen-removebg-preview.png" Width="200" Height="200"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="1300" Height="150" Margin="0,0,0,0"  Background="#FF571159" VerticalAlignment="Top" Grid.ColumnSpan="2">
           
            <TextBlock Text="A task without a plan is just a wish. Organize, prioritize, and take action"  Grid.Row="0" Margin="50,60,0,0" Height="150" Foreground="White" FontSize="22"  HorizontalAlignment="Center" FontWeight="Bold" FontFamily="Sitka Small Semibold"  Width="888" VerticalAlignment="Top"  />
            <Image Source="\Pic\Destopdashboard-removebg-preview.png" Width="240" Height="205" Grid.Row="0"  Margin="90,0,0,0"/>
        </StackPanel>
        </StackPanel>
        <Grid Grid.Row="1" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Study" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" Height="280" Margin="20,98,0,0"  
            Click="StudyNext_Click" VerticalAlignment="Top" Width="370" Background="White" BorderBrush="#FF571159" 
            BorderThickness="6,6,6,6">
                <Button.Content>
                    <StackPanel Width="370" Height="280">
                        <TextBlock Text="Work" Width="370" Height="70" TextAlignment="Center" FontSize="36" FontWeight="Bold" 
                           FontFamily="Segoe UI Semibold" Foreground="#FF571159"  Margin="0,0,0,20"/>
                        <Image Source="C:\Users\hiruni lakshika\source\repos\WpfApp3\WpfApp3\pic\dashboardcom-removebg-preview.png" Width="100" Height="100" />
                        <TextBlock Text=" Plan projects,set your meeting days and goals" 
                           TextWrapping="Wrap" TextAlignment="Center" FontSize="20" FontFamily="Segoe UI Emoji" 
                                   Foreground="#FF571159" FontWeight="Bold" Margin="0,20,0,0"     
                           />
                    </StackPanel>
                </Button.Content>
            </Button>

            <Button x:Name="Home"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Left" Height="280" Margin="10,98,0,0"  Click="PaybillNext_Click" Background="#FFFFFF" BorderBrush="#FF571159"  VerticalAlignment="Top" Width="370" RenderTransformOrigin="0.5,0.5"  BorderThickness="6,6,6,6" >
                <Button.Content>
                    <StackPanel Width="370" Height="280">
                        <TextBlock Text="Home" Width="370" Height="54" TextAlignment="Center" Margin="0,0,0,20" TextWrapping="Wrap" Foreground="#FF571159" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                        <Image Source="C:\Users\hiruni lakshika\source\repos\WpfApp3\WpfApp3\pic\dashboardhome-removebg-preview.png" Width="100" Height="100"/>
                        <TextBlock Text="Track bill payment days and special occasions to remind" TextAlignment="Center" Margin="0,20,0,0" Foreground="#FF571159" FontWeight="Bold" TextWrapping="Wrap" Width="370" Height="70" FontSize="20" FontFamily="Segoe UI Emoji" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button  x:Name="Work" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" Height="280" Background="#FFFFFF" BorderBrush="#FF571159"  Margin="0,98,0,0" Click="Work_Click" VerticalAlignment="Top" Width="370" RenderTransformOrigin="0.5,0.5" BorderThickness="6,6,6,6" >
                <Button.Content>
                    <StackPanel Width="370" Height="280">
                        <TextBlock Text="Time Alert" Width="250" Height="43" Margin="0,0,0,20" TextAlignment="Center" TextWrapping="Wrap" Foreground="#FF571159" FontSize="36" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                        <Image Source="C:\Users\hiruni lakshika\source\repos\WpfApp3\WpfApp3\pic\dashboard_clock-removebg-preview.png" Width="100" Height="100" Margin="10,0,0,0"/>
                        <TextBlock Text=" Plan your day effectively! Add your timetable and daily routine" Margin="0,20,0,0" TextAlignment="Center" Foreground="#FF571159" FontWeight="Bold" TextWrapping="Wrap" Width="370" Height="120" FontSize="20" FontFamily="Segoe UI Emoji"/>
                    </StackPanel>
                </Button.Content>
            </Button>
            <Image Source="C:\Users\hiruni lakshika\source\repos\WpfApp3\WpfApp3\pic\corner-removebg-preview.png" Width="400" 
               Grid.Column="1"    Height="400" Margin="0,400,0,0"/>
            <Button x:Name="ContinueButton" Content="Continue" Foreground="White" Background="#FF571159" 
                    Grid.Column="1"  HorizontalAlignment="Center"  Margin="0,250,0,0"  Click="BtnContinue_Click" Width="100" Height="40"/>
        </Grid >
        
    </Grid>
</Window>
